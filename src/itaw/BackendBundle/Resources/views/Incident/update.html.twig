{% extends 'itawBackendBundle::layout.html.twig' %}

{% block title %}Incidents{% endblock %}

{% block currentPage %}incidents{% endblock %}

{% block content %}

    {% if app.request.query.all.endpoint is defined %}
        {% set endpointSlug = app.request.query.all.endpoint %}
    {% else %}
        {% set endpointSlug = null %}
    {% endif %}

    <div>
        <h2>
            <a href="{{ path('backend_incidents_collection') }}">Incidents</a>
            /
            Update
        </h2>
    </div>

    <div class="panel panel-warning">
        <div class="panel-body">

            <form method="post" id="form-update-incident">

                <div class="form-group">
                    <label for="input-title">Title</label>
                    <input type="text" class="form-control" id="input-title" placeholder="Title" name="title" value="{{ incident.title }}">
                </div>

                <div class="form-group">
                    <label for="input-endpoint">Endpoint</label>
                    <input type="text" class="form-control" id="input-endpoint" value="{{ incident.endpoint.name }} &middot; {{ incident.endpoint.host }} &middot; {{ incident.endpoint.ip }}" disabled>
                </div>

                <div class="form-group">
                    <label for="input-description">Description</label>
                    <textarea class="form-control" id="input-description" name="description" rows="15">{{ incident.description }}</textarea>
                </div>

                <input type="hidden" value="1" name="sent">

                <button type="submit" class="btn btn-warning">Update</button>

            </form>

        </div>
    </div>

{% endblock %}
