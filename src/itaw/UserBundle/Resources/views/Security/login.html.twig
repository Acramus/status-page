{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %}{{ parent() }} &middot; Login{% endblock %}

{% block fos_user_content %}

    <div class="row">
        <div class="col-lg-6 col-lg-offset-3" id="content">

            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="alert alert-danger a-{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="panel panel-info" id="panel-login">
                <div class="panel-body">

                    <h1 class="text-center">Login</h1>

                    <form role="form" method="post" action="{{ path("fos_user_security_check") }}">

                        <div class="form-group">
                            <input type="text"
                                   class="form-control"
                                   id="username"
                                   name="_username"
                                   value="{{ last_username }}"
                                   required="required">
                        </div>

                        <div class="form-group">
                            <input type="password"
                                   class="form-control"
                                   id="password"
                                   name="_password"
                                   required="required">
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}">

                        <button type="submit" class="btn btn-info btn-block" id="_submit" name="_submit">Login</button>
                    </form>

                </div>
            </div>

            <h4 class="text-center"><small>ITAW StatusPage Backend</small></h4>

        </div>
    </div>

{% endblock fos_user_content %}